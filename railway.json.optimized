{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "./Dockerfile.optimized"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "node apps/backend/dist/index.js",
    "healthchecks": {
      "enabled": true,
      "cpu": "100m",
      "memory": "256Mi"
    }
  }
}
